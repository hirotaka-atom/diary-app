<div class="posts">
  <div class="container">
    <div class="title">
      <h1>編集</h1>
    </div>
    <%= form_tag("/posts/#{@post.id}/update", {multipart: true}) do %>
    <div class="form">
      <div class="diary-name">
        <h5>題名</h5>
        <input name="title" value="<%= @post.title %>">
      </div>
      <h5>本文</h5>
      <label for="myImage">
      　画像を選択する
        <input type="file" id="myImage" accept="image/*" name="image">
        <img id="preview">
      </label>

      <textarea name="content"><%= @post.content %></textarea>
      <div class="button">
        <input type="submit" value="編集を保存する">
      </div>
    </div>
    <% end %>
  </div>
</div>
