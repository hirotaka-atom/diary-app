<div class="posts">
  <div class="container">
    <div class="title">
      <h1>日記一覧</h1>
    </div>
    <div class="form">
      <% if @posts.blank? %>
        <p>投稿はありません</p>
      <% else %>
        <% @posts.each do |post| %>
          <div class="post-item">
            <h4><%= link_to(post.title, "/posts/#{post.id}") %></h4>
            <p><%= post.created_at %></p>
          </div>
        <% end %>
      <% end %>
    </div>
</div>
