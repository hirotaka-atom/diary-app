<!DOCTYPE html>
<html>
  <head>
    <title>DiaryApp <%= yield(:title) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>

  <body>
    <header>
        <div class="logo">
            <%= link_to("diary_app", root_path) %>
        </div>
        <div class="header-list">
          <ul>
            <% if session[:user_id] %>
              <li><%= link_to("アカウント", "/users/#{@current_user.id}") %></li>
              <li><%= link_to("日記を書く", "/posts/new") %></li>
              <li><%= link_to("日記一覧", "/posts/index") %></li>
              <li><%= link_to("ブックマーク一覧", "/bookmarks/index") %></li>
              <li><%= link_to("ログアウト", "/users/logout", {method: "post"}) %></li>
            <% else %>
              <li ><%= link_to("新規登録", "/signup") %></li>
              <li><%= link_to("ログイン", "/users/login") %></li>
            <% end %>
          </ul>
        </div>
    </header>

      <% flash.each do |message_type, message| %>
        <div class="flash alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    <%= yield %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
