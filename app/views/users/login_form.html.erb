<div class="users">
  <div class="container">
    <div class="title">
      <h1>ログイン</h1>
    </div>
    <%= form_tag("/users/login") do %>
    <div class="form">
      <div class="mail">
        <h2>メールアドレス<h2>
        <input name="email" placeholder="メールアドレス" value="<%= @email %>">
      </div>
      <div class="password">
        <h2>パスワード</h2>
        <input name="password" placeholder="パスワード" value="<%= @password %>">
      </div>
      <div class="button">
        <input type="submit" value="ログイン">
      </div>
    </div>
    <% end %>

  </div>
</div>
